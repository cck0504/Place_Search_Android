<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Info">


    <TextView
        android:id="@+id/no_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="223dp"
        android:text="No details"
        android:visibility="gone" />

    <TableLayout
        android:id="@+id/info_table"
        android:layout_width="337dp"
        android:layout_height="470dp"
        android:layout_centerInParent="true"
        android:stretchColumns="0"
        android:visibility="gone">

        <TableRow
            android:id="@+id/address_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/address_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="Address"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/address_input"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:singleLine="false"
                android:text="TextView"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:id="@+id/phone_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/phone_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="Phone Number"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phone_input"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:singleLine="false"
                android:text="TextView"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:id="@+id/price_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/price_label"
                android:layout_width="39dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="Price Level"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/price_input"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:singleLine="false"
                android:text="TextView"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:id="@+id/rating_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/rating_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="Rating"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:orientation="vertical">

                <RatingBar
                    android:id="@+id/rating_input"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="0.1" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:id="@+id/google_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/google_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="Google Page"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/google_input"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:maxEms="20"
                android:singleLine="false"
                android:text="TextView"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:id="@+id/website_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/website_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="Website"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/website_input"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:singleLine="false"
                android:text="TextView"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>

</RelativeLayout>